<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#FFFFFF"
    app:cardCornerRadius="12dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="217dp"
            android:layout_height="31dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#03A9F4"
            android:text="ahmed"
            android:textColor="#03A9F4"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/name_img"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/name_img"
            android:layout_width="44dp"
            android:layout_height="35dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:tint="#03A9F4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/name" />

        <ImageButton
            android:id="@+id/delete_history"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/btn_up"
            android:scaleType="fitCenter"
            android:src="@drawable/delete"
            android:tint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/up_down_history"
            style="@android:style/Widget.DeviceDefault.ImageButton"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/btn_up"
            android:scaleType="fitCenter"
            android:src="@drawable/down"
            android:tint="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/delete_history"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/from_img"
            android:layout_width="31dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:tint="#03A9F4"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_img"
            app:srcCompat="@drawable/circle" />

        <ImageView
            android:id="@+id/to_img"
            android:layout_width="29dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:tint="#03A9F4"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/from_img"
            app:srcCompat="@drawable/to" />

        <ImageView
            android:id="@+id/date_img"
            android:layout_width="57dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="48dp"
            android:tint="#03A9F4"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/to_img"
            app:srcCompat="@drawable/date" />

        <ImageView
            android:id="@+id/status_img"
            android:layout_width="44dp"
            android:layout_height="39dp"
            android:layout_marginTop="164dp"

            android:tint="#03A9F4"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.679"
            app:layout_constraintStart_toEndOf="@+id/time_img"
            app:layout_constraintTop_toBottomOf="@+id/up_down_history"
            app:srcCompat="@drawable/status" />

        <ImageView
            android:id="@+id/time_img"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="48dp"

            android:tint="#03A9F4"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/date_img"
            app:layout_constraintTop_toBottomOf="@+id/to_txt"
            app:srcCompat="@drawable/time" />

        <TextView
            android:id="@+id/from_txt"
            android:layout_width="326dp"
            android:layout_height="34dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:text="Cairo"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/from_img"
            app:layout_constraintTop_toTopOf="@+id/from_img" />

        <TextView
            android:id="@+id/to_txt"
            android:layout_width="330dp"
            android:layout_height="33dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:text="ismailia"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/to_img"
            app:layout_constraintStart_toEndOf="@+id/to_img" />

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:text="13/12/2015"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_img" />

        <TextView
            android:id="@+id/time_txt"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="10:30"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/date_txt"
            app:layout_constraintTop_toBottomOf="@+id/time_img"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/status_txt"
            android:layout_width="44dp"
            android:layout_height="19dp"
            android:gravity="center"
            android:text="Done"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/status_img"
            app:layout_constraintTop_toBottomOf="@+id/status_img"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
